@using EcommerceWeb.Mvc.Models.Reviews
@model ReviewVM

<form asp-controller="Review" asp-action="Update" method="post" class="d-inline">
    <input type="hidden" name="reviewId" value="@Model.Id" />
    <input type="hidden" name="productId" value="@Model.ProductId" />
    <input type="hidden" name="_method" value="PUT" />
    <span class="stext-102 cl3 m-r-16">
        Your Rating
    </span>

    <span class="wrap-rating fs-18 cl11 pointer">
        @for (int i = 1; i <= 5; i++)
        {
            if (i > Model.Rating)
            {
                <i class="item-rating pointer zmdi zmdi-star-outline"></i>
            }
            else
            {
                <i class="item-rating pointer zmdi zmdi-star"></i>
            }
        }
        <input class="dis-none" type="number" name="request.Rating" id="rating-input">
    </span>
    <div class="row p-b-25">
        <div class="col-12 p-b-5">
            <label class="stext-102 cl3" for="review">Your review</label>
            <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" id="review" name="request.Comment">@Model.Commnet</textarea>
        </div>
    </div>

    <button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10">
        Save
    </button>
</form>
