@model List<ProductVM>
@{
    ViewData["Title"] = "Products Page";
    var productList = (ViewData["Products"] as List<ProductVM>)!;
}

<ul class="bg-bl">
    @foreach (var product in productList)
    {
        <li>
            <a href="@Url.Action("Details", "Products", new { id = product.Id })">
                @product.Name
            </a>
        </li>
    }
</ul>
