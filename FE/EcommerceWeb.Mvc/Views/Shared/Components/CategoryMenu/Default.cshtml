@using EcommerceWeb.Mvc.Models.Categories
@model List<CategoryVM>
@{
	var filter = Context.Request.Query["filter"].ToString();
}
<div class="flex-w flex-sb-m p-b-52">
	<div class="flex-w flex-l-m filter-tope-group m-tb-10">
		<a class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" asp-controller="Product" asp-action="Index">
			All Products
		</a>
		@foreach (var category in Model)
		{
			@if(category.Name is "Nam" or "Nữ")
			{
				continue;
			}
			<a class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" asp-controller="Product"  asp-action="Index" asp-route-categoryName="@category.Name">
				@category.Name
			</a>
		}
	</div>

	<div class="flex-w flex-c-m m-tb-10">
		<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
			<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
			<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Filter
		</div>

		<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
			<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
			<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Search
		</div>
	</div>

	<!-- Search product -->
	<form class="dis-none panel-search w-full p-t-10 p-b-15">
		<div class="bor8 dis-flex p-l-15">
			<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
				<i class="zmdi zmdi-search"></i>
			</button>

			<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search" placeholder="Search">
		</div>
	</form>

	<!-- Filter -->
	<div class="dis-none panel-filter w-full p-t-10">
		<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
			<div class="filter-col1 p-r-15 p-b-27" style="width: 100%; max-width: 100%;">
				<div class="mtext-102 cl2 p-b-15">
					Sort By
				</div>

				<ul style="display:flex; justify-content: space-between;">
					<li class="p-b-6">
						<a class="filter-link stext-106 trans-04 @(filter == "" ? "filter-link-active" : "")" asp-controller="Product" asp-action="Index">
							Default
						</a>
					</li>

					<li class="p-b-6">
						<a class="filter-link stext-106 trans-04 " asp-controller="Product" asp-action="Index" asp-route-filter="Rating">
							Average rating
						</a>
					</li>

					<li class="p-b-6">
						<a class="filter-link stext-106 trans-04 @(filter == "Newest" ? "filter-link-active" : "")" asp-controller="Product" asp-action="Index" asp-route-filter="Newest">
							Newness
						</a>
					</li>

					<li class="p-b-6">
						<a class="filter-link stext-106 trans-04 @(filter == "LowtoHigh" ? "filter-link-active" : "")" asp-controller="Product" asp-action="Index" asp-route-filter="LowtoHigh">
							Price: Low to High
						</a>
					</li>

					<li class="p-b-6">
						<a class="filter-link stext-106 trans-04 @(filter == "HightoLow" ? "filter-link-active" : "")" asp-controller="Product" asp-action="Index" asp-route-filter="HightoLow">
							Price: High to Low
						</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
