@using EcommerceWeb.Presentation.Common

@{
    var page = int.TryParse(Context.Request.Query["Page"], out int pageValue) ? pageValue : 1;
    var search = Context.Request.Query["Search"].ToString();
    var categoryName = Context.Request.Query["categoryName"].ToString();
    var filter = Context.Request.Query["filter"].ToString();
}
@{
    ViewData["Title"] = "Product List";
}
<div class="m-t-80">
    @await Component.InvokeAsync("ProductList", new { categoryName = categoryName, page = new PageQuery { Page = page, SearchTerm = search }, filter = filter });
</div>
