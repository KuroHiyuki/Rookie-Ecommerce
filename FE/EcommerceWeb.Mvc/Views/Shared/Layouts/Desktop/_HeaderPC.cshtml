@{
	string userId = Context.Request.Cookies["UserId"];
	string Name = Context.Request.Cookies["Username"];
	string count = Context.Request.Cookies["count-cart"] == null ? "0" : Context.Request.Cookies["count-cart"];

}
<div class="container-menu-desktop">
	<div class="wrap-menu-desktop">
		<nav class="limiter-menu-desktop container">

			<!-- Logo desktop -->
			<a asp-controller="Home" asp-action="Index" class="logo">
				<img src="~/images/icons/logo-01.png" alt="IMG-LOGO">
			</a>
			<!-- Menu desktop -->
			<div class="menu-desktop">
				<ul class="main-menu">
					<li class="active-menu">
						<a asp-controller="Home" asp-action="Index">Home</a>
					</li>

					<li>
						<a asp-controller="Product" asp-action="Index">Shop</a>
					</li>

					<li class="label1" data-label1="hot">
						<a asp-action="Index" asp-controller="Cart">Features</a>
					</li>

					<li>
						<a href="#">About</a>
					</li>
				</ul>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m">
				<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
					<i class="zmdi zmdi-search"></i>
				</div>

				<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="@count">
					<i class="zmdi zmdi-shopping-cart"></i>
				</div>
				@if (!string.IsNullOrEmpty(userId))
				{
					<a href="#" class="dis-block cl2 hov-cl1 trans-04 p-l-22 p-r-11">
						Hi, @Name.Substring(0, 5)
					</a>
					<a asp-action="Logout" asp-controller="authentication" class="dis-block cl2 hov-cl1 trans-04 p-l-22 p-r-11">
						<i class="zmdi zmdi-sign-in"></i>
					</a>
				}
				else
				{
					<a asp-action="Index" asp-controller="authentication" class="dis-block cl2 hov-cl1 trans-04 p-l-22 p-r-11">
						<i class="zmdi zmdi-account-circle"></i>
					</a>
				}
			</div>
		</nav>
	</div>
</div>
<script>

	document.addEventListener('DOMContentLoaded', function () {
		updateCartCount();
	});

</script>